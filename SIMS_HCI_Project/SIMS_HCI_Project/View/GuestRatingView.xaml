<Window x:Class="SIMS_HCI_Project.View.GuestRatingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_HCI_Project.View"
        mc:Ignorable="d"
        Title="GuestRatingView" Height="600" Width="650" WindowStartupLocation="CenterScreen">
    <Grid Background="Azure">
        <StackPanel>

            <TextBlock x:Name="tblWelcome" Text="Rate your guest!" 
                       Width="400" Height="50" VerticalAlignment="Center" Foreground="Turquoise" FontSize="35" TextAlignment="Center" Margin="0 30 0 30 ">
            </TextBlock>

            <Border VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="Turquoise" BorderThickness="2" CornerRadius="15">
                <Grid Width="550" Height="300" Margin="10 10 10 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>

                    <Label Content="Cleanliness: " Grid.Row="0" Grid.Column="0" Height="40" Foreground="Turquoise" FontSize="20"></Label>
                    <Label Content="Rules following : " Grid.Row="1" Grid.Column="0" Height="40" Foreground="Turquoise" FontSize="20"></Label>
                    <Label Content="Additional comment: " Grid.Row="2" Grid.Column="0" Height="40" Foreground="Turquoise" FontSize="20"></Label>



                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
                        <TextBox x:Name="txtCleanliness"  IsReadOnly="True"
                             Text="{Binding Path = Rating.Cleanliness, UpdateSourceTrigger = PropertyChanged}"
                             Width="100" Height="40" HorizontalAlignment="Left" Margin="15 0 0 0" BorderBrush="Turquoise" TextAlignment="Center" FontSize="20">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"></Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <Button x:Name="btnPlusCleanliness" Click="btnPlusCleanliness_Click"  Content="+" Width="50" Height="50" 
                                    Margin="20 0 0 0" Background="Turquoise" Foreground="Azure" FontSize="30">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"></Setter>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button x:Name="btnMinusCleanliness" Click="btnMinusCleanliness_Click"  Content="-" Width="50" Height="50" 
                                    Margin="20 0 0 0" Background="Turquoise" Foreground="Azure" FontSize="30">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"></Setter>
                                </Style>
                            </Button.Resources>
                        </Button>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
                        <TextBox x:Name="txtRuleCompliance"  IsReadOnly="True"
                             Text="{Binding Path = Rating.RuleCompliance, UpdateSourceTrigger = PropertyChanged}"
                             Width="100" Height="40" HorizontalAlignment="Left" Margin="15 0 0 0" BorderBrush="Turquoise" TextAlignment="Center" FontSize="20">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"></Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <Button x:Name="btnPlusRuleCompliance" Click="btnPlusRuleCompliance_Click"  Content="+" Width="50" Height="50" 
                                    Margin="20 0 0 0" Background="Turquoise" Foreground="Azure" FontSize="30">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"></Setter>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button x:Name="btnMinusRuleCompliance" Click="btnMinusRuleCompliance_Click"  Content="-" Width="50" Height="50" 
                                    Margin="20 0 0 0" Background="Turquoise" Foreground="Azure" FontSize="30">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"></Setter>
                                </Style>
                            </Button.Resources>
                        </Button>

                    </StackPanel>

                    <TextBox x:Name="txtAdditionalComment"  Grid.Row="2" Grid.Column="1"
                                     Text="{Binding Path= Rating.AdditionalComment, UpdateSourceTrigger=PropertyChanged}"
                                     Height="140" BorderBrush="Turquoise" TextAlignment="Center" FontSize="20">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"></Setter>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>
            </Border>

            <Button x:Name="btnSubmit" Content="Submit" Click="btnSubmit_Click"
                    Width="300" Height="70" Margin="10 40 10 40" Padding="10" Background="Turquoise" Foreground="Azure" FontSize="30">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"></Setter>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>
    </Grid>
</Window>
