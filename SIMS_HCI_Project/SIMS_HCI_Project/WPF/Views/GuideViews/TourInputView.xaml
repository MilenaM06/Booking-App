<Window x:Class="SIMS_HCI_Project.WPF.Views.GuideViews.TourInputView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_HCI_Project.WPF.Views.GuideViews"
        mc:Ignorable="d"
        Title="Tour Input" Height="700" Width="650">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"></RowDefinition>
            <RowDefinition Height="52.618"></RowDefinition>
            <RowDefinition Height="158*"></RowDefinition>
            <RowDefinition Height="53*"></RowDefinition>
            <RowDefinition Height="53*"></RowDefinition>
            <RowDefinition Height="263*"></RowDefinition>
            <RowDefinition Height="53*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Title" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Location" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Description" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top"></TextBlock>
        <TextBlock Text="Language" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Max Number Of Guests" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" TextWrapping="Wrap" Width="75"></TextBlock>
        <TextBlock Text="Add Key Points" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,30,0,0"></TextBlock>

        <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="180" Margin="15,0,0,0"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Margin="15,0,10,0">
                <TextBlock Text="City" HorizontalAlignment="Center"></TextBlock>
                <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="85"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                <TextBlock Text="Country" HorizontalAlignment="Center"></TextBlock>
                <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="85"/>
            </StackPanel>
        </StackPanel>
        <TextBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Margin="15,0,0,0" Height="130"/>
        <TextBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="180" Margin="15,0,0,0"/>
        <TextBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="50" Margin="15,0,0,0"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="155" Margin="15,0,0,0"/>
                <Button Content="+" Margin="5,0,0,0" Width="20"/>
            </StackPanel>
            <ListBox Margin="15,15,0,0" Height="200" Width="180" VerticalAlignment="Center" HorizontalAlignment="Left"></ListBox>
        </StackPanel>
        <Button Grid.Row="5" Grid.Column="1" Content="Remove" Margin="0,0,10,0" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
            <TextBlock Text="Duration" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
            <TextBox VerticalAlignment="Center" HorizontalAlignment="Left" Text="" Width="50" Margin="15,0,0,0"></TextBox>
            <TextBlock Text="h" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
        </StackPanel>
        <StackPanel  Grid.Row="2" Grid.Column="2" Orientation="Vertical">
            <TextBlock Text="Departure" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
                    <TextBlock Text="Date" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    <DatePicker></DatePicker>
                </StackPanel>
                <StackPanel Margin="15,0,0,0" VerticalAlignment="Bottom">
                    <TextBlock Text="Time" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    <TextBox Width="90"></TextBox>
                </StackPanel>
                <Button Content="+" Margin="10,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Button>
            </StackPanel>
            <ListBox Height="80" Margin="10,10,10,10" Width="180" HorizontalAlignment="Left"></ListBox>

        </StackPanel>

        <Button Grid.Row="2" Grid.Column="2" Margin="0,0,10,0" Content="Remove" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
        <StackPanel Grid.Row="5" Grid.Column="2" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="155" Margin="15,0,0,0"/>
                <Button Content="+" Margin="5,0,0,0" Width="20"/>
            </StackPanel>
            <ListBox Margin="15,15,0,0" Height="200" Width="180" VerticalAlignment="Center" HorizontalAlignment="Left"></ListBox>
        </StackPanel>

        <Button Grid.Row="5" Grid.Column="2" Content="Remove" Margin="0,0,10,0" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
        <Button Grid.Row="6" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Submit"></Button>
    </Grid>
</Window>
