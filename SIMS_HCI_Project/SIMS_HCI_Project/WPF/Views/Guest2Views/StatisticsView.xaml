      mc:Ignorable="d" 
      d:DesignHeight="518" d:DesignWidth="1080"
      Title="StatisticsView">

    <Grid Background="AliceBlue">
        <Label Content="Percentage of accepted requests:" HorizontalAlignment="Left" Margin="44,74,0,0" VerticalAlignment="Top"/>
        <Label Content="Statistics on my tour requests"  HorizontalAlignment="Left" Margin="332,10,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Height="37" Width="289" FontSize="20"/>
        <ComboBox ItemsSource="{Binding Years}" SelectedIndex="{Binding SelectedYearIndex}" HorizontalAlignment="Left" Margin="75,133,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="yearComboBox" SelectedIndex="0" Margin="75,171,885,318">
            <ComboBoxItem Content="All Time" />
            <ComboBoxItem Content="2023" />
            <ComboBoxItem Content="2022" />
            <ComboBoxItem Content="2021" />
        </ComboBox>
        <!--lvc:PieChart Hoverable="True" Margin="242,74,631,282" Series="{Binding StatusSummary}">
            <lvc:PieChart.Series>
                <lvc:PieSeries Title="Accepted requests" DataLabels="True" Values="1.2" ></lvc:PieSeries>
                <lvc:PieSeries Title="Invalid requests" DataLabels="True" Values="4"></lvc:PieSeries>
                <lvc:PieSeries Title="Pending requests" DataLabels="True" Values="5"></lvc:PieSeries>
            </lvc:PieChart.Series>
            <lvc:PieChart.DataTooltip>
                <lvc:DefaultTooltip BulletSize="15"/>
            </lvc:PieChart.DataTooltip>
        </lvc:PieChart-->

        <lvc:PieChart Series="{Binding RequestStatusSummary}" LegendLocation="Right" Margin="229,74,511,259" Background="Aquamarine" Visibility="Visible">
            <lvc:PieChart.DataTooltip>
                <lvc:DefaultTooltip />
            </lvc:PieChart.DataTooltip>
        </lvc:PieChart>



    </Grid>
</Page>
