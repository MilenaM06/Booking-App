<Page x:Class="SIMS_HCI_Project.WPF.Views.Guest1Views.ReservationRescheduleView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS_HCI_Project.WPF.Views.Guest1Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReservationRescheduleView">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Guest:"/>
                <TextBox x:Name="Guest" Width="100" Text="{Binding Path=Reservation.Guest.Name, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                <TextBlock Text="Accommodation:"/>
                <TextBox x:Name="Accommodation" Width="100" Text="{Binding Path=Reservation.Accommodation.Name, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Initial Start:"/>
                <DatePicker x:Name="Start" IsEnabled="False" Width="100" SelectedDate="{Binding Reservation.Start}"/>
                <TextBlock Text="Initial End:"/>
                <DatePicker x:Name="End" IsEnabled="False" Width="100" SelectedDate="{Binding Reservation.End}"/>
            </StackPanel>
            <TextBlock Text="My request for reschedule:"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Wanted Start:"/>
                <DatePicker x:Name="WantedStartDatePicker" IsEnabled="True" Width="100"  SelectedDate="{Binding WantedStart, Mode=OneWayToSource}"/>
                <TextBlock Text="Wanted End:"/>
                <DatePicker x:Name="WantedEndDatePicker" IsEnabled="True" Width="100"  SelectedDate="{Binding WantedEnd, Mode=OneWayToSource}"/>
                <Button Content="Send" Command="{Binding DataContext.SendReservationRescheduleRequestCommand, RelativeSource={RelativeSource AncestorType={x:Type Page}}}"/>
            </StackPanel>
            <TextBlock Text="Other requests to reschedule this accommodation:"/>
            <DataGrid ItemsSource="{Binding Path=RescheduleRequests, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="60,60,60,60" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Guest" Binding="{Binding AccommodationReservation.Guest.Name}" Width="Auto"></DataGridTextColumn>
                    <DataGridTextColumn Header="Initial Start" Binding="{Binding AccommodationReservation.Start , StringFormat='{}{0:MM/dd/yyyy}'}" Width="SizeToCells"></DataGridTextColumn>
                    <DataGridTextColumn Header="Initial End" Binding="{Binding AccommodationReservation.End, StringFormat='{}{0:MM/dd/yyyy}'}" Width="SizeToCells"></DataGridTextColumn>
                    <DataGridTextColumn Header="Wanted Start" Binding="{Binding WantedStart , StringFormat='{}{0:MM/dd/yyyy}'}" Width="SizeToCells"></DataGridTextColumn>
                    <DataGridTextColumn Header="Wanted End" Binding="{Binding WantedEnd, StringFormat='{}{0:MM/dd/yyyy}'}" Width="SizeToCells"></DataGridTextColumn>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="SizeToHeader"></DataGridTextColumn>
                    <DataGridTextColumn Header="Owner comment" Binding="{Binding OwnerComment}" Width="SizeToHeader"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

    </Grid>
</Page>
